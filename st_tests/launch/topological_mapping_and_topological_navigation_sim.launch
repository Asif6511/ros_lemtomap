<?xml version="1.0"?>

<launch>	
	<!-- Set some Rolling Window Gmapping parameters -->
	<arg name="scan_topic" default="scan_hokuyo" />
	<arg name="rolling" default="false" /> <!-- true/false: use rolling window gmapping or not -->
	<arg name="windowsize" default="20" /> <!-- double, size in meters for rolling window, will be neglected if rolling is false -->
	<arg name="perfect_odometry" default="false" /> <!-- true/false: for simulations, perfect odometry can be used -->
	<arg name="suppress_console" default="1" /> <!-- 1/0, which means true or false. This will suppress stderr output of gmapping -->

	<!-- Set other parameters -->
	<arg name="use_sim_time" default="true" />
	<arg name="world_name_short" default="willowgarage.world" /> <!-- empty,ball,willowgarage willowgarage_large -->
	<arg name="load_map_directory" default=""/> <!-- experimental: for loading a topological map -->

	<!-- RVIZ -->
	<node name="rviz" pkg="rviz" type="rviz"
		args="-d $(find st_tests)/rviz/mapping.rviz" />

	<!-- Bringup simulated robot -->
	<include
		file="$(find st_gazebo)/launch/bringup_simulated.launch">
		<arg name="x_robot" value="21" /> <!-- for willow garage, use 6, -16, 0 OR 21, 4, 0 -->
		<arg name="y_robot" value="4" />
		<arg name="z_robot" value="0" />
		<arg name="urdf_file" value="$(find xacro)/xacro.py '$(find st_description)/robots/semantic_turtle_no_kinect.urdf.xacro'" /> <!--semantic_turtle_no_kinect.urdf.xacro or semantic_turtle.urdf.xacro -->
	</include>

	<!-- Gazebo -->
	<include
		file="$(find st_gazebo)/launch/turtlebot_gazebo_world.launch">
		<arg name="world_name"
			value="$(find st_gazebo)/worlds/$(arg world_name_short)" />
		<arg name="use_sim_time" value="$(arg use_sim_time)" />
	</include>

	<!-- Topological map builder --> 
	<!-- rosrun st_topological_mapping topological_navigation_mapper scan_topic:=scan_hokuyo -->
	<node pkg="st_topological_mapping" type="topological_navigation_mapper"
		name="topological_navigation_mapper" output="screen" clear_params="true">
		<param name="scan_topic" value="$(arg scan_topic)" />
		<param name="load_map_directory" value="$(arg load_map_directory)" />
		<param name="main_loop_frequency" value="4" /> <!-- default is 4hz currently -->
	</node>

	<!-- Teleop -->
	<include file="$(find kobuki_keyop)/launch/keyop.launch" />

	<!-- Rolling Window Gmapping (timed) -->
	<node pkg="st_tests" 
              type="timed_roslaunch.sh" args="5 st_gmapping_rolling gmapping_general_launcher.launch scan_topic:=$(arg scan_topic) rolling:=$(arg rolling) windowsize:=$(arg windowsize) perfect_odometry:=$(arg perfect_odometry) suppress_console:=$(arg suppress_console)" 
              name="timed_roslaunch" output="log">
	</node>

	<!-- Navigation components -->
	<include file="$(find st_navigation)/launch/move_base_dwa_local.launch">
		<!--<arg name="allow_unknown" value="false" /> does not work...--> <!-- for navfn, by defualt, it is true -->
		<arg name="scan_topic" value="$(arg scan_topic)" />
	</include>
	
	<!-- Run Move Base Topo -->
	<node pkg="st_navigation" type="move_base_topo" name="move_base_topo" output="screen">
		<param name="main_loop_frequency" value="1" /> <!-- default is 1hz currently -->
	</node>
</launch>

