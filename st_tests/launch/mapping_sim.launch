<?xml version="1.0"?>

<launch>

	<arg name="use_sim_time" default="true" />
	<arg name="world_name"
		default="willowgarage.world" /> <!-- playground,empty,ball,willowgarage -->

	<!-- RVIZ -->
	<node name="rviz" pkg="rviz" type="rviz"
		args="-d $(find st_tests)/rviz/mapping.rviz" />

	<!-- Bringup simulated robot -->
	<include
		file="$(find st_simulation)/launch/bringup_simulated.launch">
		<arg name="x_robot" value="6" /> <!-- for willow garage, use 6, -16, 0 -->
		<arg name="y_robot" value="-16" />
		<arg name="z_robot" value="0" />
	</include>

	<!-- Gazebo -->
	<include
		file="$(find st_gazebo)/launch/turtlebot_gazebo_world.launch">
		<arg name="world_name" value="$(find st_gazebo)/worlds/$(arg world_name)"/>
		<arg name="use_sim_time"
			value="$(arg use_sim_time)" />
	</include>

	<!-- Gmapping -->
	<include file="$(find st_navigation)/launch/gmapping.launch">
		<arg name="scan_topic" value="scan_hokuyo" />
	</include>

	<!-- Teleop -->
	<include file="$(find turtlebot_teleop)/launch/keyboard_teleop.launch" /> <!-- u to . for move. q/z inc/decr max speeds. w/x same for only lin. e/c 
		same for only angular. space or k: force stop. anything else, stop smoothly -->
</launch>
