<?xml version="1.0"?>

<launch>
	<!-- Set some Gmapping parameters -->
	<arg name="scan_topic" default="scan_hokuyo" />
	
	<!-- Set other paramters -->
	<arg name="use_sim_time" default="true" />
	<arg name="world_name_short" default="willowgarage.world" /> <!-- playground,empty,ball,willowgarage -->

	<!-- RVIZ -->
	<node name="rviz" pkg="rviz" type="rviz"
		args="-d $(find st_tests)/rviz/mapping.rviz" />

	<!-- Bringup simulated robot -->
	<include
		file="$(find st_gazebo)/launch/bringup_simulated.launch">
		<arg name="x_robot" value="6" /> <!-- for willow garage, use 6, -16, 0 -->
		<arg name="y_robot" value="-16" />
		<arg name="z_robot" value="0" />
		<arg name="urdf_file" value="$(find xacro)/xacro.py '$(find st_description)/robots/semantic_turtle_no_kinect.urdf.xacro'" /> <!--semantic_turtle_no_kinect.urdf.xacro or semantic_turtle.urdf.xacro -->
	</include>

	<!-- Gazebo -->
	<include
		file="$(find st_gazebo)/launch/turtlebot_gazebo_world.launch">
		<arg name="world_name" value="$(find st_gazebo)/worlds/$(arg world_name_short)"/>
		<arg name="use_sim_time" value="$(arg use_sim_time)" />
	</include>

	<!-- Gmapping (timed) -->
	<node pkg="st_tests" 
              type="timed_roslaunch.sh" args="5 st_gmapping_rolling normal_gmapping.launch 
			scan_topic:=$(arg scan_topic)" 
              name="timed_roslaunch" output="screen">
	</node>
</launch>
